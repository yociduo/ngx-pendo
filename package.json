{
  "name": "ngx-pendo-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "test-schematics": "jasmine ./projects/ngx-pendo/schematics/**/*.spec.js",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-pkg": "ng build ngx-pendo --prod",
    "build-schematics": "tsc -p ./projects/ngx-pendo/schematics/tsconfig.json --outDir dist/ngx-pendo/schematics",
    "run-schematics": "schematics ./projects/ngx-pendo/schematics/dist/collection.json:ng-add",
    "gen-schema": "npx -p dtsgenerator dtsgen projects/ngx-pendo/schematics/ng-add/schema.json -o projects/ngx-pendo/schematics/ng-add/schema.d.ts",
    "cp-readme": "copyfiles ./README.md ./dist/ngx-pendo",
    "cp-schema": "copyfiles ./projects/ngx-pendo/schematics/collection.json ./dist/ngx-pendo/schematics",
    "cp": "npm run cp-readme && npm run cp-schema",
    "release": "cd ./projects/ngx-pendo && standard-version",
    "publish": "npm run build-pkg && npm run build-schematics && npm run cp && npm publish dist/ngx-pendo"
  },
  "author": "Eden Wang",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular-devkit/core": "~11.0.0",
    "@angular-devkit/schematics": "~11.0.0",
    "@angular/animations": "~11.0.0",
    "@angular/common": "~11.0.0",
    "@angular/compiler": "~11.0.0",
    "@angular/core": "~11.0.0",
    "@angular/forms": "~11.0.0",
    "@angular/platform-browser": "~11.0.0",
    "@angular/platform-browser-dynamic": "~11.0.0",
    "@angular/router": "~11.0.0",
    "change-case": "^3.1.0",
    "rxjs": "~6.6.3",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1100.1",
    "@angular/cli": "~11.0.1",
    "@angular/compiler-cli": "~11.0.0",
    "@angular/language-service": "~11.0.0",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^11.0.0",
    "@schematics/angular": "~11.0.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "copyfiles": "^2.3.0",
    "dtsgenerator": "^3.6.0",
    "husky": "^3.1.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.1.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^9.5.0",
    "ng-packagr": "^11.0.2",
    "prettier": "^1.19.1",
    "protractor": "~7.0.0",
    "standard-version": "^9.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^3.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src}/**/*.{js,jsx,ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "{src}/**/*.{scss,less,css}": [
      "stylelint --fix",
      "git add"
    ],
    "{src}/**/*.{ts,js,json,md,scss,less,css}": [
      "prettier --write --config .prettierrc",
      "git add"
    ]
  }
}
